<Window x:Class="resourses.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:resourses"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>

        <StackPanel Name="stack">
            <Button Content="Нажать" Width="150" Click="Button_Click"/>
            <Image Name="img" Source="pack://application:,,,/Images/bear.jpg"/>
            <MediaElement Name="Sound" Source="Sounds/ding.wav" LoadedBehavior="Manual"/>
        </StackPanel>
    </Grid>
</Window>
