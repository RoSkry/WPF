<Window x:Class="transformatsii.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:transformatsii"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
       
        <Rectangle Height="25" Width="37" Stroke="Blue" StrokeThickness="2" Fill="LightBlue" >
            <Rectangle.LayoutTransform>
                <RotateTransform Angle="45" />
            </Rectangle.LayoutTransform>
        </Rectangle> 
        <Rectangle Height="25" Width="37" Stroke="Yellow" StrokeThickness="2" Fill="LightGreen"/>
    </StackPanel>
</Window>
